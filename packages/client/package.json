{
  "name": "@waline/client",
  "version": "2.0.0-alpha.0",
  "description": "client for waline comment system",
  "keywords": [
    "valine",
    "waline",
    "comment",
    "blog"
  ],
  "repository": {
    "url": "https://github.com/walinejs/waline"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "default": "./dist/Waline.min.js",
      "require": "./dist/Waline.cjs.js",
      "import": "./dist/Waline.esm.js"
    },
    "./dist": "./dist/waline.min.js",
    "./dist/waline.css": "./dist/waline.css",
    "./dist/*": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/waline.min.js",
  "browser": "./dist/waline.min.js",
  "types": "./dist/waline.min.d.ts",
  "scripts": {
    "build": "npm run rollup && npm run style",
    "clean": "rimraf ./dist",
    "dev": "webpack serve --mode=development --config ./scripts/webpack.config.js",
    "lint": "eslint --ext .ts,.vue .",
    "prepublish": "npm run build",
    "rollup": "rollup -c ./scripts/rollup.config.js",
    "style": "sass ./src/styles/index.scss ./dist/waline.css --style=compressed"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie 11",
      "not op_mini all",
      "last 2 years"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ]
  },
  "devDependencies": {
    "@types/autosize": "4.0.1",
    "@types/marked": "4.0.3",
    "@vue/compiler-sfc": "3.2.31",
    "autosize": "5.0.1",
    "hanabi": "0.4.0",
    "marked": "4.0.12",
    "mitt": "3.0.0",
    "vue": "3.2.31"
  },
  "engines": {
    "node": ">=12.20.0"
  }
}
